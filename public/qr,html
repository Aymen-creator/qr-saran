<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Saran Café - QR Code Generator</title>
  <script src="https://cdn.jsdelivr.net/npm/qrcode/build/qrcode.min.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 flex flex-col items-center justify-center min-h-screen px-4">
  <div class="bg-white p-6 rounded-2xl shadow-xl w-full max-w-md text-center">
    <h1 class="text-2xl font-bold mb-4 text-gray-800">Saran Café - QR Code Generator</h1>

    <input id="menuUrl" 
           type="text" 
           placeholder="Enter your menu link (e.g. https://saran-menu.vercel.app)"
           class="w-full p-2 border rounded-lg mb-4 text-center focus:outline-none focus:ring-2 focus:ring-indigo-500">

    <button onclick="generateQR()" 
            class="w-full bg-indigo-600 hover:bg-indigo-700 text-white py-2 rounded-lg font-semibold">
      Generate QR Code
    </button>

    <div id="qrcode" class="mt-6"></div>

    <button id="downloadBtn"
            onclick="downloadQR()"
            class="hidden mt-4 bg-green-600 hover:bg-green-700 text-white py-2 px-4 rounded-lg font-semibold">
      Download QR Code
    </button>
  </div>

  <script>
    async function generateQR() {
      const url = document.getElementById('menuUrl').value.trim();
      const qrContainer = document.getElementById('qrcode');
      const downloadBtn = document.getElementById('downloadBtn');
      qrContainer.innerHTML = '';

      if (!url) {
        alert('Please enter your menu URL.');
        return;
      }

      const canvas = document.createElement('canvas');
      await QRCode.toCanvas(canvas, url, { width: 250 });
      qrContainer.appendChild(canvas);

      downloadBtn.classList.remove('hidden');
      downloadBtn.dataset.url = url;
    }

    function downloadQR() {
      const canvas = document.querySelector('#qrcode canvas');
      const link = document.createElement('a');
      link.download = 'saran-menu-qr.png';
      link.href = canvas.toDataURL('image/png');
      link.click();
    }
  </script>
</body>
</html>
